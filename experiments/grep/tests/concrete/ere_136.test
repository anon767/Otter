	$MACRO \
	-I.. -I $LIBCDIR -I $MOCKEDDIR -include $MOCKEDDIR/symexe.h \
	../grep_comb.c ../otherFiles/ere_136.c \
	--warnall --doexecute --printLittle \
	--covStats=$STATSFILE --lineCov \
	--timeout=14400 \
	--arg='CC[13]1|a{21}[23][EO][123][Es][12]a{15}aa[34][EW]aaaaaaa[X]a' --arg=ere_136.txt

done
