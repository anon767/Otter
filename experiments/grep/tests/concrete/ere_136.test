CILLY=../../../cil/bin/cilly
LIBCDIR=../../../libc
MOCKEDDIR=../../../mockedFns
STATSFILE=../grep.stats

MACRODIR=/fs/skoll/symexe/data/grep/macro
MACROFILE=$MACRODIR/ere_136.macro
cd $1

for ((x = 1; x <= 52; x++))
do

MACRO=`sed 1q $MACROFILE ; sed 1d $MACROFILE -i`

echo
