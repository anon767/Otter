if [ "$1" == merge ]; then
	if [ -f ngircd_comb.c ]; then
		echo "Deleting old ngircd_comb.c"
		rm ngircd_comb.c
	fi
	shift
	MERGE=1
elif [ ! -f ngircd_comb.c ]; then
	MERGE=1
fi

TOPDIR=~/t
LIBCDIR=$TOPDIR/libc
MOCKEDDIR=$TOPDIR/mockedFns
CILLY="env CILLY_DONT_COMPILE_AFTER_MERGE= ../../../cil/bin/cilly --merge --useLogicalOperators -D_FILE_OFFSET_BITS=64 --warnall"

if [ "$1" == libc ]; then
	echo "Merging libc"
	$CILLY --out=otherFiles/libc_comb.c \
		-I $LIBCDIR $LIBCDIR/*.c --warnall
elif [ "$MERGE" == 1 ]; then
	echo "Merging"
	$CILLY --out=ngircd_comb.c \
		-I $LIBCDIR -I $MOCKEDDIR \
		*.c otherFiles/libc_comb.c $MOCKEDDIR/*.c  $*
else
	echo "Doing symbolic execution"
	# TODO: allow arguments to have spaces
	$CILLY -I $MOCKEDDIR --doexecute $*
fi
