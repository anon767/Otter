#!/bin/sh
TRUNK=@OTTER_TRUNK@
COREUTILS="$TRUNK/experiments/coreutils-6.11"
NEWLIB_OTTER="$TRUNK/newlib-1.19.0/otter"
OTTER_CMD="$NEWLIB_OTTER/otter-with-libc"

"$OTTER_CMD" \
    --doRunRmtmps --doexecute \
    --queue=KLEE \
    --lineCov \
    --untracked-functions="$NEWLIB_OTTER/library_functions" \
    --untracked-functions="$COREUTILS/libcoreutils_functions" \
    --untracked-functions="$COREUTILS/other_functions" \
    "$COREUTILS/__otter_main_driver.c" --mainfn=__otter_main_driver \
    "$@"
