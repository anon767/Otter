# Given "foo" as an argument, the file invoked is "tests/foo.tcl"
FILE=$1

echo '#include "test-client-helper.h"
#include "deps/hiredis/hiredis.h"

redisContext *c;
' > test-functions.c

tclsh8.5 tests/test_helper.tcl --tags "" --file $FILE | grep -v '^0 tests, 0 passed, 0 failed$' >> test-functions.c

sed -n 's/^\(void .*(void)\).*/\1;/p' test-functions.c > test-functions.h